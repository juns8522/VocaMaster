<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jun.vocamaster" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.VocabularyActivity"
            android:label="@string/title_activity_vocabulary"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.VocabularyDetailActivity"
            android:label="@string/title_activity_vocabulary_detail"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.FavouriteActivity"
            android:label="@string/title_activity_favourite"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.TestMenuActivity"
            android:label="@string/title_activity_test_menu"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.TestActivity"
            android:label="@string/title_activity_test"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.FavouriteDetailActivity"
            android:label="@string/title_activity_favourite_detail"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.SearchActivity"
            android:label="@string/title_activity_search"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.SearchDetailActivity"
            android:label="@string/title_activity_search_detail"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.StatisticsActivity"
            android:label="@string/title_activity_statistics"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.StatisticsDetailActivity"
            android:label="@string/title_activity_statistics_detail"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.StatisticsVocaDetailActivity"
            android:label="@string/title_activity_statistics_voca_detail"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.AddActivity"
            android:label="@string/title_activity_add"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.EditActivity"
            android:label="@string/title_activity_edit"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.ReceiverActivity"
            android:label="@string/title_activity_receiver"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.InstructionActivity"
            android:label="@string/title_activity_instruction"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.InstructionDetailActivity"
            android:label="@string/title_activity_instruction_detail"
            android:screenOrientation="portrait" >
        </activity>

        <receiver android:name=".view.VMAppWidget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/vmapp_widget_info" />
        </receiver>

        <activity
            android:name=".view.WebSearchActivity"
            android:label="@string/title_activity_web_search"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.WebActivity"
            android:label="@string/title_activity_web"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.TestActivity2"
            android:label="@string/title_activity_test_activity2"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
