<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#3b5998"
    tools:context="com.example.jun.vocamaster.view.ReceiverActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_grey_padding"
        android:layout_marginBottom="@dimen/small_margin">
        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:id="@+id/spinner" />
        <EditText
            android:id="@+id/editText_message"
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="1.5"
            android:background="@drawable/rounded_white_padding"
            android:gravity="center"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sub_parent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_grey_padding"
            android:layout_marginBottom="@dimen/small_margin">

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@string/selected_word_"
                android:id="@+id/textView"
                android:gravity="center"
                android:textSize="@dimen/text_size_small"
                android:textColor="#3b5998"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:id="@+id/tv_word"
                android:gravity="center"
                android:textSize="@dimen/text_size_small"
                android:textColor="#3b5998"/>
        </LinearLayout>
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView" />
    </LinearLayout>
</LinearLayout>
