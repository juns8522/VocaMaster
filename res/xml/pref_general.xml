<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="enable_sound_checkbox"
        android:title="@string/pref_title_enable_sound"
        android:defaultValue="true" />


    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="number_of_test_questions_list"
        android:title="@string/pref_title_number_of_test_questions"
        android:defaultValue="10"
        android:entries="@array/pref_number_of_test_question_list_titles"
        android:entryValues="@array/pref_number_of_test_question_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="time_limit_list"
        android:title="@string/pref_title_time_limit"
        android:defaultValue="null"
        android:entries="@array/pref_time_limit_list_titles"
        android:entryValues="@array/pref_time_limit_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
